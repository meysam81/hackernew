---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import HeaderActions from '../components/ui/HeaderActions.vue';
import KeyboardHelpModal from '../components/ui/KeyboardHelpModal.vue';
import SearchModal from '../components/search/SearchModal.vue';
import InstallPrompt from '../components/pwa/InstallPrompt.vue';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A modern reimagining of Hacker News' } = Astro.props;
const basePath = import.meta.env.BASE_URL || '/';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#F97316" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={`${basePath}og-image.png`} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href={`${basePath}favicon.svg`} />
    <link rel="manifest" href={`${basePath}manifest.json`} />
    <link rel="canonical" href={Astro.url.href} />
    <link rel="alternate" type="application/rss+xml" title="HackerNew - Top Stories" href={`${basePath}rss.xml`} />
    <link rel="apple-touch-icon" href={`${basePath}favicon-256x256.png`} />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <link rel="dns-prefetch" href="https://analytics.hackernew.dev" />
    <link rel="preconnect" href="https://analytics.hackernew.dev" crossorigin />

    <title>{title}</title>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "HackerNew",
      "url": "https://hackernew.dev",
      "description": "A modern reimagining of Hacker News with dark mode, keyboard navigation, bookmarks, and more.",
      "applicationCategory": "NewsApplication",
      "operatingSystem": "Any",
      "browserRequirements": "Requires a modern web browser",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      }
    })} />

    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('hackernew-theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const isDark = theme === 'dark' || (theme !== 'light' && prefersDark);
        if (isDark) {document.documentElement.classList.add('dark');}

        const density = localStorage.getItem('hackernew-density') || '"comfortable"';
        const densityValue = JSON.parse(density);
        document.documentElement.classList.add(`density-${densityValue}`);
      })();
    </script>

    <!-- Capture beforeinstallprompt before Vue hydrates -->
    <script is:inline>
      window.__pwaInstallPrompt = null;
      window.addEventListener('beforeinstallprompt', function(e) {
        e.preventDefault();
        window.__pwaInstallPrompt = e;
      });
    </script>

    <!-- Register PWA service worker -->
    <script src="../lib/pwa.ts"></script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <div id="announcer" aria-live="polite" aria-atomic="true" class="sr-only"></div>

    <div class="app-shell">
      <Header>
        <HeaderActions slot="actions" client:load />
      </Header>

      <main id="main-content" class="main-content">
        <slot />
      </main>

      <Footer />
    </div>

    <KeyboardHelpModal client:idle />
    <SearchModal client:load />
    <InstallPrompt client:idle />

    <script defer src="https://analytics.hackernew.dev/pa.js"
    id="pianjs"
    data-code="66Al4zzfEZ3zOeB3B5TjoRxwnK4NQBVy"
    data-hit-endpoint="https://analytics.hackernew.dev/hit"
    data-event-endpoint="https://analytics.hackernew.dev/event"
    data-session-endpoint="https://analytics.hackernew.dev/session"></script>
  </body>
</html>

<style>
  .app-shell {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
    width: 100%;
    max-width: 720px;
    margin: 0 auto;
    padding: var(--spacing-4);
  }

  @media (min-width: 1024px) {
    .main-content {
      padding: var(--spacing-6);
    }
  }
</style>
