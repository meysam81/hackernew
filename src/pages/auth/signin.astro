---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AuthButton from '../../components/auth/AuthButton.vue';
---

<BaseLayout title="Sign In | HackerNew">
  <div class="signin-page">
    <div class="signin-card">
      <div class="signin-header">
        <h1 class="signin-title">Welcome to HackerNew</h1>
        <p class="signin-description">
          Sign in to save bookmarks, track reading history, and sync across devices.
        </p>
      </div>

      <AuthButton client:load />

      <p class="signin-note">
        By signing in, you agree to our terms of service. Your data is stored securely with Supabase.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .signin-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
  }

  .signin-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--spacing-8);
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    max-width: 400px;
    width: 100%;
  }

  .signin-header {
    text-align: center;
    margin-bottom: var(--spacing-6);
  }

  .signin-title {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-2);
  }

  .signin-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    margin: 0;
  }

  .signin-note {
    margin-top: var(--spacing-6);
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    text-align: center;
    max-width: 280px;
  }
</style>
