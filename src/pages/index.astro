---
import BaseLayout from '../layouts/BaseLayout.astro';
import StoryFeed from '../components/story/StoryFeed.vue';
---

<BaseLayout title="Top Stories | HackerNew" description="Browse the top stories on Hacker News with a clean, modern interface. Dark mode, keyboard shortcuts, and bookmarks included.">
  <div class="page-header">
    <h1 class="page-title">Top Stories</h1>
    <p class="page-description">The best stories from Hacker News, reimagined.</p>
  </div>

  <StoryFeed client:load feedType="top" />
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--spacing-6);
  }

  .page-title {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-2);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    margin: 0;
  }
</style>
