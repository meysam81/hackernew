---
import BaseLayout from '../layouts/BaseLayout.astro';
import StoryFeed from '../components/story/StoryFeed.vue';
---

<BaseLayout title="Best Stories | HackerNew">
  <div class="page-header">
    <h1 class="page-title">Best Stories</h1>
    <p class="page-description">The highest-rated stories on Hacker News.</p>
  </div>

  <StoryFeed client:load feedType="best" />
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--spacing-6);
  }

  .page-title {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-2);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    margin: 0;
  }
</style>
