---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookmarksList from '../components/bookmarks/BookmarksList.vue';
---

<BaseLayout title="Bookmarks | HackerNew" description="Your saved Hacker News stories for reading later.">
  <div class="page-header">
    <h1 class="page-title">Bookmarks</h1>
    <p class="page-description">Stories you've saved for later.</p>
  </div>

  <BookmarksList client:load />
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--spacing-6);
  }

  .page-title {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 var(--spacing-2);
  }

  .page-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    margin: 0;
  }
</style>
